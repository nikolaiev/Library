<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>mainController</servlet-name>
        <servlet-class>com.controller.FrontController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>mainController</servlet-name>
        <url-pattern>/home/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/login/*</url-pattern>
        <url-pattern>/logout/*</url-pattern>
        <url-pattern>/books/*</url-pattern>


    </servlet-mapping>

    <!--Filters configuration-->
    <filter>
        <filter-name>default</filter-name>
        <filter-class>com.controller.filters.resource.DefaultFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>default</filter-name>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.png</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>auth</filter-name>
        <filter-class>com.controller.filters.security.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>auth</filter-name>
        <servlet-name>mainController</servlet-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>